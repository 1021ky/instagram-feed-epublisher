{
  "name": "instagram-feed-epublisher-webapp",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "auth:migrate": "pnpm dlx @better-auth/cli@latest migrate --config src/lib/auth.ts --yes",
    "predev": "pnpm auth:migrate",
    "dev": "pnpm next build && pnpm node scripts/dev-https.mjs",
    "build": "pnpm next build",
    "start": "pnpm next start",
    "lint": "pnpm tsc --noEmit && next lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "pnpm vitest run --config vitest.config.ts",
    "e2etest": "pnpm playwright test",
    "e2etest:ui": "pnpm playwright test --ui",
    "e2etest:debug": "pnpm playwright test --debug",
    "prepare": "cd .. && husky"
  },
  "engines": {
    "node": "24.12.0"
  },
  "packageManager": "pnpm@10.26.0",
  "dependencies": {
    "@lesjoursfr/html-to-epub": "^2.0.6",
    "@logtape/adaptor-winston": "^2.0.2",
    "@logtape/logtape": "^2.0.2",
    "better-auth": "^1.0.0",
    "better-sqlite3": "^12.0.0",
    "linkedom": "^0.18.12",
    "next": "^15.2.0",
    "playwright": "^1.52.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@playwright/test": "^1.52.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.0.3",
    "@types/react": "19.2.9",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.5",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "vitest": "^3.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,html,yml,yaml}": [
      "prettier --write"
    ]
  }
}
